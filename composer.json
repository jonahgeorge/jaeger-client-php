{
    "name": "jonahgeorge/jaeger-client-php",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6||^7.0",
        "packaged/thrift": "0.10.0",
        "opentracing/opentracing" : "1.0.0-beta5",
        "phlib/base_convert": "^1.0",
        "psr/log": "1.0.2",
         "ext-sockets": "*"
    },
    "provide": {
        "opentracing/opentracing": "1.0.0-beta5"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7.19||^6.4",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Jaeger\\": "src\\Jaeger"
        },
        "files": [
            "./src/Jaeger/Constants.php"
        ]
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "lint": "./vendor/bin/phpcs --standard=ZEND --standard=PSR2 --ignore=*/vendor/*,*/src/Jaeger/ThriftGen/* ./",
        "fix-lint": "./vendor/bin/phpcbf --standard=ZEND --standard=PSR2 --ignore=*/vendor/*,*/src/Jaeger/ThriftGen/* ./"
    }
}
